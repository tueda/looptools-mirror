static inline double_complex A0(AARGS(_Cr_))
{
  DOUBLE_COMPLEX result;
  FORTRAN(a0sub)(&result, AARGS(_Frp_));
  return ToComplex(result);
}

static inline double_complex A0C(AARGS(_Cc_))
{
  DOUBLE_COMPLEX result;
  FORTRAN(a0subc)(&result, AARGS(_Fcp_));
  return ToComplex(result);
}

